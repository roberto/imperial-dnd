{
  "manifest_version": 2,
  "name": "Imperial DnD",
  "version": "1.0",
  "permissions": [
    "https://*.dndbeyond.com/"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.dndbeyond.com/*"],
      "js": [
        "libs/findAndReplaceDOMText.js",
        "imperial-dnd.js"
      ],
      "all_frames": true
    }
  ]
}
